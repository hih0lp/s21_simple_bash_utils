all: format s21_grep

s21_grep: s21_grep.o s21_grep_functions.o
	gcc s21_grep.o s21_grep_functions.o -o s21_grep

s21_grep.o: s21_grep.c
	gcc -Wall -Wextra -Werror -c s21_grep.c -o s21_grep.o

s21_grep_functions.o: s21_grep_functions.c s21_grep.h
	gcc -Wall -Werror -Wextra -c s21_grep_functions.c -o s21_grep_functions.o

format:
	clang-format -i s21_grep.c s21_grep_functions.c s21_grep.h

style: format

clean:
	rm -f s21_grep.o s21_grep s21_grep_functions.o